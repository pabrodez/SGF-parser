{
  "compilerOptions": {
    "strict": true,
    // "outDir": "dist",
    // "rootDir": "./src",
    "declarationDir": "dist/types",
    "target": "esnext",
    "lib": [
      "esnext"
    ],
    "sourceMap": false,
    "module": "ES2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": true,
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests/**/*.test.ts"
  ]
}